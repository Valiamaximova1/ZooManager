<Application x:Class="UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:UI"
             xmlns:viewmodels="clr-namespace:UI.ViewModels"
               xmlns:views="clr-namespace:UI.Views"
             StartupUri="Views/MainWindow.xaml">


    <Application.Resources>
  

        
        <DataTemplate DataType="{x:Type viewmodels:LoginViewModel}">
            <views:LoginView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodels:RegisterViewModel}">
            <views:RegisterView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodels:HomeViewModel}">
            <views:HomeView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodels:AnimalsViewModel}">
            <views:AnimalsView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodels:EventsViewModel}">
            <views:EventsView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodels:ProfileViewModel}">
            <views:ProfileView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodels:TicketsViewModel}">
            <views:TicketsView />
        </DataTemplate>
    </Application.Resources>


</Application>
