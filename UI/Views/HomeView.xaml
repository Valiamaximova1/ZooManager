<UserControl x:Class="UI.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Меню -->
        <StackPanel Grid.Column="0" Background="#EEE" Margin="10">
            <Button Content="Животни" Command="{Binding ShowAnimalsCommand}" Margin="0 5"/>
            <Button Content="Събития" Command="{Binding ShowEventsCommand}" Margin="0 5"/>
            <Button Content="Билети" Command="{Binding ShowTicketsCommand}" Margin="0 5"/> 
            <Button Content="Профил" Command="{Binding ShowProfileCommand}" Margin="0 10 0 0"/>

        </StackPanel>

        <!-- Динамично съдържание -->
        <ContentControl Grid.Column="1" Content="{Binding CurrentViewModel}" />
    </Grid>

</UserControl>
