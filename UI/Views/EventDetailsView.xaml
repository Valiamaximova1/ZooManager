<UserControl x:Class="UI.Views.EventDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewmodels="clr-namespace:UI.ViewModels"
             xmlns:models="clr-namespace:BusinessLayer.DTOs"
             Width="400" Height="300">
    <Border BorderThickness="1" BorderBrush="Gray" Background="White" Padding="15">
        <StackPanel>
            <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="18" Margin="0 0 0 10"/>

            <TextBlock Text="Дата:" FontWeight="SemiBold"/>
            <TextBlock Text="{Binding Date}" Margin="0 0 0 10"/>

            <TextBlock Text="Описание:" FontWeight="SemiBold"/>
            <TextBlock Text="{Binding Description}" TextWrapping="Wrap" Margin="0 0 0 10"/>

            <TextBlock Text="Участващи животни:" FontWeight="SemiBold"/>
            <ItemsControl ItemsSource="{Binding AnimalNames}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="•  " FontWeight="Normal">
                            <Run Text="{Binding}" />
                        </TextBlock>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <Button Content="Изтрий" 
                    Command="{Binding DataContext.DeleteEventCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                    CommandParameter="{Binding}" 
                    Background="Red" Foreground="White" Margin="0 10 0 0"/>
        </StackPanel>
    </Border>
</UserControl>
